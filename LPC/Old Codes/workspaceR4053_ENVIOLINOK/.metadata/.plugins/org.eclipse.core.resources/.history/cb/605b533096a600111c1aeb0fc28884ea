#ifdef __USE_CMSIS
#include "LPC17xx.h"
#endif

//#include <mcu_regs.h>
//#include <lpc17xx_gpio.h>


unsigned int i=0;

int main(void)
{
	//GPIO_Init();
	GPIO_SetDir(0, 22 , 1);	//Configuro el pin como salida

	while(1)
		{
		GPIO_SetValue(0, 22);        //coloco un "1" en P0.22
		for (i=0;i<50000;i++){}         //demora

		GPIO_ClearValue(0, 22);        //coloco un "0" en P0.22
		for (i=0;i<50000;i++){}         //demora
		}

	return 0 ;
}

