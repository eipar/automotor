#ifdef __USE_CMSIS
#include "LPC17xx.h"
#endif

//#include "mcu_regs.h"
//#include "gpio.h"

#include <cr_section_macros.h>
#include <NXP/crp.h>
#include "LPC17xx_gpio.h"

unsigned int i=0;

int main(void)
{
	GPIOInit();
	GPIOSetDir(0, 22 , 1);	//Configuro el pin como salida

	while(1)
		{
		GPIOSetValue(0, 22 , 1);        //coloco un "1" en P0.22
		for (i=0;i<50000;i++){}         //demora

		GPIOSetValue(0, 22 , 0);        //coloco un "0" en P0.22
		for (i=0;i<50000;i++){}         //demora
		}

	return 0 ;
}

