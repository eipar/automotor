#ifdef __USE_CMSIS
#include "LPC17xx.h"
#endif


#include <lpc17xx_gpio.h>
#include <lpc17xx_systick.h>

/************************** PRIVATE VARIABLES *************************/
 /* SysTick Counter */
 volatile unsigned long SysTickCnt;

 /************************** PRIVATE FUNCTIONS *************************/
 void SysTick_Handler (void);

 void Delay (unsigned long tick);

 /*----------------- INTERRUPT SERVICE ROUTINES --------------------------*/
 /*********************************************************************/
 void SysTick_Handler (void) {
   SysTickCnt++;
 }

 /*-------------------------PRIVATE FUNCTIONS------------------------------*/
 /*********************************************************************/
 void Delay (unsigned long tick) {
   unsigned long systickcnt;

   systickcnt = SysTickCnt;
   while ((SysTickCnt - systickcnt) < tick);
 }


int main(void)
{
	//SystemInit ();
	GPIO_SetDir(0, (1<<22) , 1);	//Configuro el pin como salida

	//SysTick_Config(SystemCoreClock/1000); /* Generate interrupt each 1 ms   */
	//Initialize System Tick with 10ms time interval
	SYSTICK_InternalInit(10);
	 //Enable System Tick interrupt
	 SYSTICK_IntCmd(ENABLE);
	 //Enable System Tick Counter
	 SYSTICK_Cmd(ENABLE);

	while(1)
		{
		GPIO_SetValue(0, (1<<22));        //coloco un "1" en P0.22
		Delay (200); // wait 2 seconds (2000ms)
		GPIO_ClearValue(0, (1<<22));        //coloco un "0" en P0.22
		Delay (200); // wait 2 seconds (2000ms)
		}

	return 0 ;
}

